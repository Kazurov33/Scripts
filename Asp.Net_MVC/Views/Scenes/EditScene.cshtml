@model Asp.Net_MVC.Models.Scene

@{
    ViewData["Title"] = "Edit";
}

<h2>Редактирование</h2>

<h4>Сценария</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditScene">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SceneId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptId" class="control-label"></label>
                <select asp-for="ScriptId" class="form-control" asp-items="ViewBag.ScriptId"></select>
                <span asp-validation-for="ScriptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a href="##" onClick="history.go(-1); return false;">Назад к списку сценариев</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
