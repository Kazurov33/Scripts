@model Asp.Net_MVC.Models.Scene

@{
    ViewData["Title"] = "Create";
}

<h2>Создать</h2>

<h4>Сценарий</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateScene">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Названия сценария</label>
                <input asp-for="Name" name="Название" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptId" class="control-label"></label>
                <select asp-for="ScriptId" class ="form-control" asp-items="ViewBag.ScriptId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="##" onClick="history.go(-1); return false;">Назад к списку сценариев</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
