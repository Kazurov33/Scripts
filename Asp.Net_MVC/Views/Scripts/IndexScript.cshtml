@model IEnumerable<Asp.Net_MVC.Models.Script>

@{
    ViewData["Title"] = "Список скриптов";
}


<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>


<h2>Список скриптов</h2>

<button> Кнопка</button>



<table class="table">
    <thead>
        <tr>
            <th>
                Название скрипта
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Количество "чего-то"
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Scenes" asp-action="IndexScene" asp-route-IdSCR="@item.ScriptId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "EditScript", new { id = item.ScriptId }, new { @class = "ScriptItem" }) |
                    @Html.ActionLink("Удалить", "DeleteScript", new { id = item.ScriptId }, new { @class = "ScriptItem" })
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
    {
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".ScriptItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
